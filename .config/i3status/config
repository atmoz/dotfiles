general {
    colors = true
    color_good = "#859900"
    color_degraded = "#b58900"
    color_bad = "#dc322f"
    interval = 5
}

order  = "ethernet hydrogen"
order += "wireless wlp3s0"
order += "battery 0"
order += "battery 1"
order += "battery all"
order += "load"
order += "cpu_temperature 0"
order += "disk /"
order += "disk /home"
order += "time"

