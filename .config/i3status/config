disk "/" {
    format = ""
    format_below_threshold = " / %percentage_avail (%avail) "
    low_threshold = 20
}

disk "/home" {
    format = ""
    format_below_threshold = " /home %percentage_avail (%avail) "
    low_threshold = 20
}

battery 0 {
    format = " %percentage "
    integer_battery_capacity = true
    hide_seconds = true
    low_threshold = 20
    threshold_type = percentage
}
battery 1 {
    format = " %percentage "
    integer_battery_capacity = true
    hide_seconds = true
    low_threshold = 20
    threshold_type = percentage
}
battery all {
    format = " %status %percentage %remaining %consumption "
    integer_battery_capacity = true
    hide_seconds = true
    low_threshold = 30
    threshold_type = time
}

time {
    format = " %F %H:%M "
}

