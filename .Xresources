Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

URxvt*.font: xft:Fira Mono:size=9
!URxvt*.font: xft:Ubuntu Mono for Powerline:size=10
URxvt*.scrollBar: false
URxvt*.fade: 0

xterm*faceName: Fira Mono
!xterm*faceName: Source Code Pro
xterm*faceSize: 10
xterm*border: off
xterm*borderWidth: 0
xterm*fastScroll: true

